---
interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  class?: string;
  containerClass?: string;
}

const { id, title, subtitle, class: className = "", containerClass = "" } = Astro.props;
---

<section id={id} class={`section-padding ${className}`}>
  <div class={`container-site ${containerClass}`}>
    {(title || subtitle) && (
      <div class="mb-12 text-center max-w-2xl mx-auto">
        {title && (
          <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mb-4">
            {title}
          </h2>
        )}
        {subtitle && (
          <p class="text-lg text-neutral-600">
            {subtitle}
          </p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>

