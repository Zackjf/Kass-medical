---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = "", hover = true } = Astro.props;

const hoverStyles = hover 
  ? "hover:border-primary-200 hover:shadow-lg hover:shadow-primary-500/5 hover:-translate-y-0.5" 
  : "";
---

<div class={`bg-white border border-neutral-200 rounded-2xl p-6 transition-all duration-300 ${hoverStyles} ${className}`}>
  <slot />
</div>

