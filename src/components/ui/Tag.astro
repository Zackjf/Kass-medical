---
interface Props {
  variant?: "primary" | "secondary" | "accent";
  size?: "sm" | "md";
  class?: string;
}

const { variant = "secondary", size = "sm", class: className = "" } = Astro.props;

const variants = {
  primary: "bg-primary-100 text-primary-700 border-primary-200",
  secondary: "bg-neutral-100 text-neutral-600 border-neutral-200",
  accent: "bg-accent-100 text-accent-700 border-accent-200",
};

const sizes = {
  sm: "px-2.5 py-1 text-xs",
  md: "px-3 py-1.5 text-sm",
};
---

<span class={`inline-flex items-center font-medium rounded-full border ${variants[variant]} ${sizes[size]} ${className}`}>
  <slot />
</span>

