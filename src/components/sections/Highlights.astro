---
import { highlights } from "../../config/site";

const icons: Record<string, string> = {
  calendar: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  "file-stack": `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
  target: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  wrench: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`,
  clock: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
};
---

<section class="py-12 bg-white border-y border-neutral-100">
  <div class="container-site">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-6 md:gap-8">
      {highlights.map((item, index) => (
        <div 
          class="text-center group animate-fade-in-up" 
          style={`animation-delay: ${0.1 + index * 0.05}s`}
        >
          <div class="inline-flex items-center justify-center w-12 h-12 mb-3 rounded-xl bg-gradient-to-br from-primary-50 to-accent-50 group-hover:from-primary-100 group-hover:to-accent-100 transition-colors">
            <svg 
              class="w-6 h-6 text-primary-600" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              set:html={icons[item.icon] || icons.calendar}
            />
          </div>
          <div class="text-2xl md:text-3xl font-display font-bold text-neutral-900">
            {item.value}
          </div>
          <div class="text-sm text-neutral-500 mt-1">
            {item.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

