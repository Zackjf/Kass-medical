---
import Section from "../ui/Section.astro";
import { faqs } from "../../config/site";
---

<Section 
  id="faq" 
  title="Frequently Asked Questions" 
  subtitle="Common questions about working with me."
>
  <div class="max-w-3xl mx-auto space-y-4">
    {faqs.map((faq, index) => (
      <details 
        class="group bg-white border border-neutral-200 rounded-2xl overflow-hidden hover:border-primary-200 transition-colors animate-fade-in-up"
        style={`animation-delay: ${0.1 + index * 0.05}s`}
      >
        <summary class="flex items-center justify-between p-5 cursor-pointer list-none">
          <h3 class="font-semibold text-neutral-900 pr-4">
            {faq.question}
          </h3>
          <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-neutral-100 group-hover:bg-primary-100 flex items-center justify-center transition-colors">
            <svg 
              class="w-5 h-5 text-neutral-500 group-hover:text-primary-600 transition-all group-open:rotate-180" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </summary>
        <div class="px-5 pb-5 text-neutral-600 leading-relaxed border-t border-neutral-100 pt-4">
          {faq.answer}
        </div>
      </details>
    ))}
  </div>
</Section>

