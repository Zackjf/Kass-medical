---
import { getCollection } from "astro:content";
import Section from "../ui/Section.astro";
import Card from "../ui/Card.astro";
import Tag from "../ui/Tag.astro";

const caseStudies = (await getCollection("case-studies")).sort(
  (a, b) => a.data.order - b.data.order
);
---

<Section 
  id="cases" 
  title="Portfolio" 
  subtitle="Privacy-safe examples of process improvements and problem-solving."
  class="bg-neutral-50/50"
>
  <div class="grid md:grid-cols-2 gap-6">
    {caseStudies.map((cs, index) => (
      <Card 
        class="animate-fade-in-up" 
        style={`animation-delay: ${0.1 + index * 0.1}s`}
      >
        <div class="space-y-4">
          <!-- Title -->
          <h3 class="font-display font-semibold text-lg text-neutral-900">
            {cs.data.title}
          </h3>

          <!-- Problem -->
          <div>
            <div class="flex items-center gap-2 text-sm font-medium text-red-600 mb-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              Problem
            </div>
            <p class="text-sm text-neutral-600">{cs.data.problem}</p>
          </div>

          <!-- Actions -->
          <div>
            <div class="flex items-center gap-2 text-sm font-medium text-primary-600 mb-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              Actions Taken
            </div>
            <ul class="space-y-1">
              {cs.data.actions.map((action) => (
                <li class="flex items-start gap-2 text-sm text-neutral-600">
                  <span class="w-1.5 h-1.5 rounded-full bg-primary-400 mt-1.5 flex-shrink-0"></span>
                  {action}
                </li>
              ))}
            </ul>
          </div>

          <!-- Results -->
          <div>
            <div class="flex items-center gap-2 text-sm font-medium text-accent-600 mb-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Results
            </div>
            <ul class="space-y-1">
              {cs.data.results.map((result) => (
                <li class="flex items-start gap-2 text-sm text-neutral-600">
                  <svg class="w-4 h-4 text-accent-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {result}
                </li>
              ))}
            </ul>
          </div>

          <!-- Tools -->
          {cs.data.tools.length > 0 && (
            <div class="pt-4 border-t border-neutral-100">
              <div class="flex flex-wrap gap-2">
                {cs.data.tools.map((tool) => (
                  <Tag size="sm" variant="accent">{tool}</Tag>
                ))}
              </div>
            </div>
          )}
        </div>
      </Card>
    ))}
  </div>

  <!-- Disclaimer -->
  <p class="text-center text-sm text-neutral-500 mt-8 italic">
    All details anonymized. No PHI or identifying information included.
  </p>
</Section>

