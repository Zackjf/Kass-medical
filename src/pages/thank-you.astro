---
import BaseLayout from "../components/layout/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Button from "../components/ui/Button.astro";
import { site } from "../config/site";
---

<BaseLayout>
  <Nav />
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-b from-primary-50 to-white">
    <div class="container-site py-20">
      <div class="max-w-lg mx-auto text-center">
        <!-- Success icon -->
        <div class="w-20 h-20 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>

        <h1 class="text-3xl font-display font-bold text-neutral-900 mb-4">
          Message Sent!
        </h1>
        
        <p class="text-lg text-neutral-600 mb-8">
          Thank you for reaching out. I'll review your message and get back to you within 24 hours.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/" variant="primary" size="lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Back to Home
          </Button>
          <Button href={site.bookingLink} variant="secondary" size="lg" external>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Schedule a Call
          </Button>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

